{
  "name": "use-typewriter-animation",
  "version": "3.2.0",
  "description": "A modern, performant React hook for creating typewriter animation effects with full TypeScript support and SSR compatibility.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "bun run clean && bun run esbuild.ts && bun run types",
    "types": "tsc",
    "pack": "bun pm pack",
    "clean": "rm -rf dist",
    "watch": "tsc --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest --config jest.config.js",
    "version": "bun run version-bump.ts",
    "publish": "bun run pack && npm publish",
    "release": "bun run version && bun run build && bun run publish"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.25.5",
    "esbuild-node-externals": "^1.18.0",
    "inquirer": "^12.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "semver": "^7.6.3",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doguyilmaz/use-typewriter-animation.git"
  },
  "keywords": [
    "react",
    "hook",
    "typewriter",
    "animation",
    "typescript",
    "ssr",
    "rsc",
    "server-components",
    "react-19",
    "text-animation",
    "typing-effect",
    "use-typewriter-animation",
    "use-typewriter",
    "modern-react",
    "performance"
  ],
  "license": "MIT",
  "author": {
    "name": "Dogu Yilmaz",
    "url": "https://github.com/doguyilmaz"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "bugs": {
    "url": "https://github.com/doguyilmaz/use-typewriter-animation/issues"
  },
  "homepage": "https://github.com/doguyilmaz/use-typewriter-animation#readme",
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}